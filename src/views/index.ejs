<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css"></link>
</head>
<body>
    <!-- <h1>Hello from ejs</h1> -->
    
    <!-- <img src="img/1.png" width="100%"> -->
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload File</a>
    
    </div>

    <!-- <div style=" padding-left: 16px">
        <%= dataUser %>
    </div> -->
    <div>
        <h2>User List</h2>
        <table>
            <thread>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thread>
            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td><%= dataUser[i].id %></td>
                    <td><%= dataUser[i].firstName %></td>
                    <td><%= dataUser[i].lastName %></td>
                    <td>
                        <a href="./detail/user/<%= dataUser[i].id %>" target="_blank"> Detail</a>
                        <form action="/edit-user/<%= dataUser[i].id %>" method="get">
                            <button type="submit"> Edit </button>
                        </form>
                        <form action="/delete-user" method="post">
                            <input type="text" hidden value="<%= dataUser[i].id %>" name="userId"/> <!-- use the text type to give a value and hide the text  -->
                            <button type="submit"> Delete </button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        
        </table>

        <div class="create-user-container">
            <form action="/create-new-user" method="post"> <!-- whenever we create a new user, always use POST because it brings the data to database while GET doesnt -->
            <div>Create a new user:</div>
            <div>
                <label>First Name:</label>
                <input type="text" name="firstName"/>
            </div>

            <div>
                <label>Last Name:</label>
                <input type="text" name="lastName"/>
            </div>

            <div>
                <label>Email:</label>
                <input type="email" name="email"/>
            </div>

            <div>
                <label>Address:</label>
                <input type="text" name="address"/>
            </div>

            <div>
                <button type="submit" class="subm"> Submit</button>
            </div>
        </form>
        </div>
    </div>
      
</body>
</html>